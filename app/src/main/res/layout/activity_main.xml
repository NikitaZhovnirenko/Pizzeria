<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">


    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="729dp"
        android:background="@color/light_gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:shadowColor="@color/yellow"
            android:shadowDx="7"
            android:shadowDy="2"
            android:shadowRadius="0.2"
            android:text="PizzaDay"
            android:textColor="@color/green"
            android:textSize="50dp" />

        <TextView

            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="150dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:shadowColor="@color/yellow"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="0.2"
            android:text="Карбонара"
            android:textColor="@color/green"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="196dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/carbonara" />

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginEnd="8dp"


            android:background="@drawable/default_button"
            android:fontFamily="sans-serif-black"
            android:text="Добавить"
            android:textAlignment="center"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/operationField"/>

        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="150dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:shadowColor="@color/yellow"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="0.2"
            android:text="Франческа"
            android:textColor="@color/green"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="196dp"
                android:layout_height="160dp"
                app:srcCompat="@drawable/francheska" />

            <Button
                android:id="@+id/btnSecond"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@android:dimen/app_icon_size"
                android:layout_marginStart="250dp"

                android:layout_marginEnd="8dp"

                android:background="@drawable/default_button"
                android:fontFamily="sans-serif-black"
                android:text="Добавить"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/resultField2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/operationField"/>
            <Button
                android:id="@+id/btnThird"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginVertical="@android:dimen/app_icon_size"
                android:layout_marginStart="125dp"

                android:layout_marginEnd="8dp"

                android:background="@drawable/default_button"
                android:fontFamily="sans-serif-black"
                android:text="Приобрести"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
